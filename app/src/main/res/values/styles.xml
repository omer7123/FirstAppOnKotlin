<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EditStyle">
        <item name="android:layout_marginTop">@dimen/MarginTopEditText</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/margin</item>

        <item name="android:textSize">@dimen/TextSize</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/MarginTopButton</item>
    </style>

    <style name="title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/MarginTopButton</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>